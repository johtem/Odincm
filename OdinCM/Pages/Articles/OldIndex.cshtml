@model OdinCM.Pages.Articles.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Suggestions</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Topic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Published)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Article)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Topic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @item.Published
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Topic">Edit</a> |
                <a asp-page="./Details" asp-route-topicName="@item.Topic">Details</a> |
