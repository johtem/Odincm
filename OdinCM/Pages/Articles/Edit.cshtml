@page
@model OdinCM.Pages.Articles.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Article</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Article.Topic" />
            <div class="form-group">
                <label asp-for="Article.Topic" class="control-label"></label><br />
                <span>@Model.Article.Topic</span> 
                <span asp-validation-for="Article.Topic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.Content" class="control-label"></label>
                <textarea asp-for="Article.Content" class="form-control"></textarea>
                <span asp-validation-for="Article.Content" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    @if (Model.Article.Topic != "")
    {
        <a href="~/Articles">Back to Home</a>
    }

</div>

@section Scripts {
    <script src="~/lib/simplemde/dist/simplemde.min.js"></script>
    <script>
      var simplemde = new SimpleMDE();
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@section Styles {
    <link href="~/lib/simplemde/dist/simplemde.min.css" rel="stylesheet" />
}
